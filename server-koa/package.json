{
  "name": "server-koa",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "bin": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js -- --config=./config.yaml",
    "start": "node src/index.js -- --config=./config.yaml",
    "build:ui": "cd ../web-koa && npm run build",
    "build:exe": "pkg . --targets node18-win-x64 --output dist/case-system.exe"
  },
  "dependencies": {
    "@koa/router": "^12.0.2",
    "better-sqlite3": "^12.5.0",
    "koa": "^2.15.4",
    "koa-bodyparser": "^4.4.1",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "src/db/schema.sql",
      "src/db/seed.sql"
    ]
  }
}
